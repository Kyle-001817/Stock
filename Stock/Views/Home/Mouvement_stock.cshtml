@{
    var mo = ViewData["mo"] as List<Mouvements>;
    var mouvements = ViewData["mouvements"] as List<Mouvements>;
}
<div class="content-wrapper">
<div class="row">
        <div class="col-lg-12 mt-5">
            <div class="card">
                <div class="card-body">
                <h5 class="card-title">Mouvement de stock</h5>
                <div class="table-responsive">
                <form asp-controller="Home" asp-action="Validation" method="post">
                    <table class="table">
                        <thead>
                            <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Article</th>
                            <th scope="col">Magasin</th>
                            <th scope="col">Quantite</th>
                            <th scope="col">Prix Unitaire</th>
                            <th scope="col">Type de mouvement</th>
                            <th scope="col">MODIFICATION</th>
                            <th scope="col">SUPPRESSION</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in mouvements){
                            <tr>
                            <td>@item.daty</td>
                            <td>@item.nom_article</td>
                            <td>@item.nom_magasin</td>
                            <td>@item.quantite</td>
                            <td>@item.prix_unitaire</td>
                            <td>@item.nom_type_mouvement</td>
                            <td><a asp-action="GoTo_Modif" asp-controller="Home" asp-route-mouvement_id="@item.mouvement_id">Modifier</a></td>
                            <td><a asp-action="DeleteMouvement" asp-controller="Home" asp-route-mouvement_id="@item.mouvement_id">Supprimer</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <div class="col-lg-9">
                        <button type="submit" class="btn btn-primary">Validation</button>
                    </div>
                </form>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>